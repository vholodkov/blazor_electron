    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ElectronNET.API" Version="13.5.1" />
    <PackageReference Include="MatBlazor" Version="2.8.0" />
  </ItemGroup>
    <ItemGroup>
	    <Watch Include="..\**\*.razor" />
	    <Watch Include="..\**\*.scss" />
